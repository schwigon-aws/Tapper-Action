#! perl

use strict;
use warnings;

# TODO: redirect STDERR/STDOUT

use Tapper::Action;
use App::Daemon 'daemonize';
$App::Daemon::as_user = "root";
$App::Daemon::logfile = "/var/log/tapper-action-daemon.log";
$App::Daemon::pidfile = "/tmp/tapper-action-daemon.pid";
daemonize();
my $action = Tapper::Action->new;
$action->run;

